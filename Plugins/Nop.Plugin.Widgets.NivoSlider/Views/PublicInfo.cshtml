}
@using Nop.Web.Framework.UI

@helper RenderSliderLine(string pictureUrl, string text, string link, string dataTransition = "", string active = "", string heading = "", string subheading = "")
{
    if (!string.IsNullOrEmpty(pictureUrl))
    {
        if (!string.IsNullOrEmpty(link))
        {
            @*<a href="@link">
                    <img src="@pictureUrl" data-thumb="@pictureUrl" data-transition="@dataTransition" alt="" title="@text" />
                </a>*@
            if (active == "Active")
            {
                <div class="item active">
                    <img src="@pictureUrl">
                    <div class="slidercontent">
                        <a href="@link"><h3>@heading</h3></a>
                        <p>
                            @subheading
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="@pictureUrl">
                    <div class="slidercontent">
                        <a href="@link"><h3>@heading</h3></a>
                        <p>
                            @subheading
                        </p>
                    </div>
                </div>
            }
        }
        else
        {
            if (active == "Active")
            {
                <div class="item active">
                    <img src="@pictureUrl">
                    <div class="slidercontent">
                        <a href="@link"><h3>@heading</h3></a>
                        <p>
                            @subheading
                        </p>
                    </div>
                </div>
            }
            else
            {
                <div class="item">
                    <img src="@pictureUrl">
                    <div class="slidercontent">
                        <a href="@link"><h3>@heading</h3></a>
                        <p>
                            @subheading
                        </p>
                    </div>
                </div>
            }
            @*<img src="@pictureUrl" data-thumb="@pictureUrl" data-transition="@dataTransition" alt="" title="@text" />*@
        }
    }
}
